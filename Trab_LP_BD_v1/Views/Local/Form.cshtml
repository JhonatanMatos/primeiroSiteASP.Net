@model LocalViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastro de Locais</h2>


<div class="row">
    <div class="col-md-4">
        <form action="Salvar" method="post">
            <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />

            <label for="Id" class="control-label">Id</label>
            @if (ViewBag.Operacao == "I")
            {
                <input type="number" Name="Id" value="@Model.Id" class="form-control disabled" readonly />
            }
            else
            {
                <input type="number" Name="Id" value="@Model.Id" class="form-control disabled" readonly />
            }
            <span asp-validation-for="Id" class="text-danger"></span>
            <br />

            <label for="Endereco" class="control-label">Endereço</label>
            <input type="text" Name="Endereco" value="@Model.Endereco" class="form-control" />
            <span asp-validation-for="Endereco" class="text-danger"></span>
            <br />            

            <input type="submit" value="Salvar dados" />
            <br />
            <span class="text-danger">@ViewBag.Erro</span>
        </form>
    </div>
</div>


