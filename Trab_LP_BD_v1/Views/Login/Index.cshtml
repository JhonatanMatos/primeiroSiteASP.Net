@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" media="screen" href="~/css/teste.css" />

<h2>Login</h2>

<div class="row">
    <div class="col-lg-3">
        <form action="login/Fazlogin" method="post">
            <label for="email" class="control-label">Email</label>

            <input type="text" name="email" class="form-control" required placeholder='Usuário...' />

            <label for="senha" class="control-label">Senha</label>
            <input type="password" name="senha" class="form-control" required placeholder='Senha...' />
            <br />
            <input type="submit" value="Login" class="btn btn-primary" />
            <br />
            <a asp-area="" asp-controller="Login" asp-action="Form">Novo Registro</a>
            

            <br />
            <span class="text-danger"> @ViewBag.Erro</span>
        </form>

    </div>
</div>


